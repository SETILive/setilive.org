<% content_for :head do %>
  <%= javascript_include_tag 'jquery.validationengine.min', 'jquery.validationengine-en.min' %>
  <%= stylesheet_link_tag 'jquery.validationengine' %>
  <script type="text/javascript" charset="utf-8">

    var exports = this;
    jQuery(function(){
        new LoginPage({el: $("body"), get_user: true});
        User.fetch_current_user()
    });     
  </script>
<%end%>

<% if flash[:error] %>
  <%flash[:error].each do |message|%>
    <div id='flash'><%=message%></div>
  <%end%>
<%end%>
<div id='login'>
  <div id ='login_header'>

  
    <h1>Welcome to <strong>SETI</strong>Live!</h1>
    <p class='blurb'>Join <strong>SETI</strong>Live and you can help Scientists hunt for interesting signals from beyond the Earth</p>
  </div>
  <div id='science_channel'>
      <div class='sweeps_section_header'><h2>The Science Channel celebrates citizen science with <a href='http://science.discovery.com/tv/are-we-alone/'>Are We Alone?" Month!</a> From March 1 - 31, 2012, when you participate in the SETI Live project, you'll earn badges that qualify you to win a trip for two to the SETI Institute in California and a private tour of the Radio Telescope Observatory at Hat Creek. Earn more badges and you'll qualify for additional entries! <br/>The information requested below will only be used to confirm your sweepstakes entry and to contact you if you are a winner. It will not be retained or shared by the SETI Live project or Zooniverse.</h2></div>
      <div class='login_section_lower'>
        <%= form_tag(sweeps_submit_path, :id => "sweeps_submit") do %>
          <%= hidden_field_tag(:return_to, @return_to) if @return_to and @return_to != root_url %>
          <div id='extra_signup_info' class='user_info_region'>
            <table>
              <tr>
                <td class="first">
                  <div style="position: relative;">
                    <%= text_field_tag "first_name", nil, :tabindex => 1, :class => 'validate[required]' %>
                    <span class="placeholder">First Name</span>
                  </div>
                </td>
                <td colspan="2">
                  <div style="position: relative;">
                    <%= text_field_tag "last_name", nil, :tabindex => 2, :class => 'validate[required]' %>
                    <span class="placeholder">Last Name</span>
                  </div>
                </td>
              </tr>
              <tr>
                <td colspan="3">
                  <div style="position: relative;">
                    <%= text_field_tag "address_1", nil, :tabindex => 3, :class => 'validate[required]' %>
                    <span class="placeholder">Address 1</span>
                  </div>
                </td>
              </tr>
              <tr>
                <td colspan="2" class="first">
                  <div style="position: relative;">
                    <%= text_field_tag "address_2", nil, :tabindex => 4, :class => 'validate[required]' %>
                    <span class="placeholder">Address 2</span>
                  </div>
                </td>
                
                <td>
                  <div style="position: relative;">
                    <%= text_field_tag "telephone", nil, :class => 'validate[required]' %>
                    <span class="placeholder">Telephone</span>
                  </div>
                </td>
              
              </tr>
              <tr>
                <td width="50%" class="first">
                  <div style="position: relative;">
                    <%= text_field_tag "city", nil, :tabindex => 5, :class => 'validate[required]' %>
                    <span class="placeholder">City</span>
                  </div>
                </td>
                
                <td width="20%" class="first">
                  <div style="position: relative;">
                    <%= text_field_tag "state", nil, :tabindex => 6, :class => 'validate[required]' %>
                    <span class="placeholder">State</span>
                  </div>
                </td>
                
                <td width="30%">
                  <div style="position: relative;">
                    <%= text_field_tag "zipcode", nil, :tabindex => 7, :class => 'validate[required]' %>
                    <span class="placeholder">Zip Code</span>
                  </div>
                </td>
              </tr>
              <tr>
                <td colspan="3">
                  <p class="disclaimer">This information will only be used to contact you if you are a winner</p>
                  <p class="disclaimer"><input type="checkbox" name='offical-rules-agree'/> By checking this box you agree to the <strong><a href='http://science.discovery.com/tv/are-we-alone/sweepstakes-rules.html'>official rules.</a></strong></p>  
                  <p class="disclaimer"><input type="checkbox" name='email-opt-out' /> By checking this box you agree to Discovery contacting you from time to time by email</p>     
                </td>
              </tr>
            </table>
            <div class='sweeps_buttons' style='float:right;'>
              <%= image_submit_tag "register.png",  :style=>"width:220px; height:40px", :id=>'sweeps_register', :name=>'register' %>
              <%= image_submit_tag "button_nothanks.png",  :style=>"width:220px; height:40px",  :id=>'sweeps_no_thanks', :name=>'no_thanks' %>
            </div>
          </div>
        <%end%>
  
    <script>
      $(function() {
         $('#sweeps_submit').validationEngine();
         $("#sweeps_no_thanks").click(function() {
           $("#sweeps_submit").validationEngine('detach');
         });
       });
    </script>
  </div>
  </div>
  
</div>