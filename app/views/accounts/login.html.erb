<% content_for :head do %>
  <script type="text/javascript" charset="utf-8">

    var exports = this;
    jQuery(function(){
        new LoginPage({el: $("body")});      
    });     
  </script>
<%end%>

<div id='login'>
  <div id ='login_header'>
    <h1>Welcome, Science Channel Viewers</h1>
    <p class='blurb'>Join SETILIVE and you can earn special badges that qualify you to win a trip for two to the SETI Institute in California and 
a private tour of the Radio Telescope Observatory at Hat Creek. Earn more badges and you’ll qualify for additional entries! </p>
  </div>

  <div id='login_lower'>
    <div id='science_channel'>
      <div class='login_section_header'><h2>You can use this login across all of the Zooniverse’s citizen science projects, so you 
only need to sign up once. We promise not to share your details with anyone else. </h2></div>
      <div class='login_section_lower'>
        <%= form_tag(signup_path, :id => "signup") do %>
          <%= hidden_field_tag(:return_to, @return_to) if @return_to and @return_to != root_url %>
          <div id='extra_signup_info' class='user_info_region'>
            <p>
              <%= text_field_tag "first_name", "First Name", :style=>"width:184px" %>
              <%= text_field_tag "last_name", "Last Name", :style=>"width:184px" %>
            </p> 
              <%= text_field_tag "address_1", "Address 1", :style=>"width:380px" %>
            <p>
              <%= text_field_tag "address_2", "Address 2", :style=>"width:260px" %>
              <%= text_field_tag "telephone", "Telephone", :style=>"width:114px" %>
            </p>
            <p>
              <%= text_field_tag "city", "City", :style=>"width:184px" %>
              <%= text_field_tag "state", "State",:style=>"width:184px"  %>
              <%= text_field_tag "zipcode", "Zipcode",:style=>"width:115px" %>

            </p>
          </div>

          <div id='user_signup_info' class='user_info_region'>
            <%= text_field_tag "username", "Username", :style=>"width:219px" %>
            <%= password_field_tag "password", "Password", :style=>"width:219px" %>
            <%= password_field_tag "password_confirm", "Password Confirmation", :style=>"width:219px" %>
            <%= text_field_tag "email", "Email" %>

            <%= image_submit_tag "register.png",  :style=>"width:220px; height:40px" %>
          </div>
        <%end %>
      </div>
    </div>
    <div id='zooniverse_login'>
      <div class='login_section_header'><h2> Already have a Zooniverse username? Sign in here: </h2> </div>
      <div class='login_section_lower'>

        <%= form_tag @cas_client.login_url do %>
          <%= text_field_tag :username,  "Username" , :width=>128%>
          <%= password_field_tag :password, "Password", :width=>128 %>
            
          <%= hidden_field_tag :service, @return_to %>
          <%= hidden_field_tag :lt, @cas_client.request_login_ticket %>
          <%= image_submit_tag "login.png", :style=>"width:220px; height:40px" %>

        <% end -%>
      <div>
    </div>
  </div>
  
</div>